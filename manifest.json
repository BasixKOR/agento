{
  "name": "agento",
  "version": "0.0.1",
  "description": "agento",
  "manifest_version": 2,
  "author": "cereme",
  "permissions": [
      "*://*.wanted.co.kr/*",
      "*://wanted.co.kr/*",
      "*://*.jobplanet.co.kr/*",
      "*://jobplanet.co.kr/*",
      "*://*.mma.go.kr/*",
      "*://wtfismyip.com/*",
      "downloads",
      "tabs",
      "storage"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "content_scripts": [{
      "matches": [
          "*://*.wanted.co.kr/*",
          "*://wanted.co.kr/*",
          "*://*.jobplanet.co.kr/*",
          "*://jobplanet.co.kr/*"
      ],
      "all_frames": true,
      "js": [
          "dist/content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
      "default_popup": "dist/index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}